<div class="tag_name text-center" style="margin:10px;">
  <h1>All Posts about #<%= @tag.name %></h1>
</div><br><br>
<% @tag.posts.in_groups_of(3) do |group| %>
  <div class="row text-center">
    <% group.compact.each do |post| %>
      <div class="col-xs-4">
        <div class="title-post">
          <h4 style="text-transform:capitalize;"><%= post.name %></h4>
        </div>
        <%= link_to post_path(post) do %>
            <%= image_tag post.image.url(:large), width: "50%", class: "img-responsive rounded center-block" %>
          <% end %><br>
              <p style="text-transform:capitalize">Posted by
                  <b><%= post.user.username %></b></p>
          <p style="text-transform:capitalize">
              <b>Title:
              </b><%= post.name %></p>
          <p><b>Tags:
              </b>
              <% unless post.all_tags.empty? %>
                <% post.all_tags.each do |tag| %>
                  <%= link_to '#'+tag, tag_path(tag) %>
                <% end %>
              <% end %>
          </p>
          <p>
              <b>Comment:
              </b>
              <% if post.comments %>
                <% post.comments.each do |comment|%>
                <div class="comment">
                  <p>  <%= comment.content %> by <b style="text-transform:capitalize;"> <%= comment.user.username %></b></p>
                </div>
                <% end %>
              <% end %><br>
              <div class="buttons">
              <%= link_to 'Back',:back, class:'btn btn-default' %>
              <% if user_signed_in? %>
                <% if current_user.id == post.user.id %>
                  |
                  <%= link_to 'Edit', edit_post_path(post), class:'btn btn-default' %>
                  |
                  <%= link_to 'Delete', post_path(post), confirm: 'Are you sure?', method: :delete, class:'btn btn-default' %>
                <% end %>
              <% end %>
      </div><br><br>
    </div>
  <% end %>
</div>
<% end %>
